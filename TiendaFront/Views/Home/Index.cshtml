@{
    ViewBag.Title = "Home Page";
}
@Scripts.Render("~/bundles/Venta")
<h2>Ventas</h2>

<div class="container">
    <button type="button" class="btn btn-primary space-top-btn" onclick="ActivarModalCrear()">Registrar Venta</button>
    <div class="accordion">
        <div class="panel-group" id="accordion-group-ventas">
        </div>
    </div>
</div>
<!-- Modal crear / editar -->
<div class="modal fade" id="modal-crear-editar" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h3 class="modal-title" id="modal-title-crear-editar">Crear venta</h3>
            </div>
            <div class="modal-body">
                <input type="text" id="input-id-venta" hidden>
                <input type="text" id="input-id-Detalle-Venta" hidden>
                <div class="mb-3 row space-top-rows" id="div-select-clientes">
                    <label for="input-cliente" class="col-sm-4 col-form-label">Cliente :</label>
                    <div class="col-sm-8">
                        <select class="form-select form-control" id="select-cliente"></select>
                    </div>
                </div>
                <div class="mb-3 row space-top-rows" id="div-select-productos">
                    <label for="input-producto" class="col-sm-4 col-fo rm-label">Productos* :</label>
                    <div class="col-sm-8">
                        <select class="form-select form-control" id="select-producto"></select>
                    </div>
                </div>
                <div class="mb-3 row space-top-rows" id="div-valor-total">
                    <label for="input-valor-total" class="col-sm-4 col-form-label">Valor Total :</label>
                    <div class="col-sm-8">
                        <input type="text" readonly class="form-control" id="input-valor-total">
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" onclick="$('#modal-crear-editar').modal('hide');LimpiarFormulario()">Cancelar</button>
                <button type="button" class="btn btn-primary" onclick="CrearEditarVenta()">Guardar</button>
            </div>
        </div>
    </div>
</div>

<!-- Modal aletra -->
<div class="modal fade" id="modal-alerta" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h3 class="modal-title" id="modal-titulo-alerta">Crear cliente</h3>
            </div>
            <div class="modal-body" id="modal-body-alerta"></div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" onclick="$('#modal-alerta').modal('hide')">Aceptar</button>
            </div>
        </div>
    </div>
</div>

<!-- Modal Eliminar -->
<div class="modal fade" id="modal-eliminar" tabindex="-1" >
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h3 class="modal-title">Eliminar cliente</h3>
            </div>
            <div class="modal-body">
                <p id="modal-p-mensaje"></p>
                <input type="number" id="input-venta-eliminar" hidden />
                <input type="number" id="input-detalle-venta-eliminar" hidden />
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" onclick="$('#input-venta-eliminar').val(null);$('#modal-eliminar').modal('hide')">Cancelar</button>
                <button type="button" class="btn btn-primary" onclick="CrearEditarVenta()">Aceptar</button>
            </div>
        </div>
    </div>
</div>


