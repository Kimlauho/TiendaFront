@{
    ViewBag.Title = "Clientes";
}
@Scripts.Render("~/bundles/cliente")
</br>
<h2>Clientes</h2>
</br>
<button type="button" class="btn btn-primary space-top-btn" onclick="ActivarModalCrear()">Agregar Cliente</button>
<table id="table-clientes" class="table table-striped table-bordered" style="width:100%">
    <thead>
        <tr>
            <th>Cedula</th>
            <th>Nombre</th>
            <th>Apellido</th>
            <th>Telefono</th>
            <th class="space-width-td"></th>
        </tr>
    </thead>
    <tbody id="tbody-clientes"></tbody>
</table>

<!-- Modal crear / editar -->
<div class="modal fade" id="modal-crear-editar" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h3 class="modal-title" id="modal-title-crear-editar">Crear cliente</h3>
            </div>
            <div class="modal-body">
                <input type="text" id="input-id-cliente" hidden>
                <div class="mb-3 row space-top-rows">
                    <label for="input-cedula" class="col-sm-4 col-form-label">Cedula :</label>
                    <div class="col-sm-8">
                        <input type="text" class="form-control" id="input-cedula">
                    </div>
                </div>
                <div class="mb-3 row space-top-rows">
                    <label for="input-nombre" class="col-sm-4 col-form-label">Nombre :</label>
                    <div class="col-sm-8">
                        <input type="text" class="form-control" id="input-nombre">
                    </div>
                </div>
                <div class="mb-3 row space-top-rows">
                    <label for="input-apellido" class="col-sm-4 col-form-label">Apellido :</label>
                    <div class="col-sm-8">
                        <input type="text" class="form-control" id="input-apellido">
                    </div>
                </div>
                <div class="mb-3 row">
                    <label for="input-telefono" class="col-sm-4 col-form-label">Telefono :</label>
                    <div class="col-sm-8">
                        <input type="text" class="form-control" id="input-telefono">
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" onclick="$('#modal-crear-editar').modal('hide');LimpiarFormulario()">Cancelar</button>
                <button type="button" class="btn btn-primary" onclick="ValidarCamposRequerdos()">Guardar</button>
            </div>
        </div>
    </div>
</div>

<!-- Modal aletra -->
<div class="modal fade" id="modal-alerta" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h3 class="modal-title" id="modal-titulo-alerta">Crear cliente</h3>
            </div>
            <div class="modal-body" id="modal-body-alerta"></div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" onclick="$('#modal-alerta').modal('hide')">Aceptar</button>
            </div>
        </div>
    </div>
</div>

<!-- Modal Eliminar -->
<div class="modal fade" id="modal-eliminar" tabindex="-1" >
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h3 class="modal-title">Eliminar cliente</h3>
            </div>
            <div class="modal-body">
                <p id="modal-p-mensaje"></p>
                <input type="number" id="input-cliente-eliminar" hidden />
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" onclick="$('#modal-eliminar').modal('hide');$('#input-cliente-eliminar').val(null)">Cancelar</button>
                <button type="button" class="btn btn-primary" onclick="CrearEditarcliente()">Aceptar</button>
            </div>
        </div>
    </div>
</div>
